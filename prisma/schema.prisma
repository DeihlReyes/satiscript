// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(cuid())
  name      String?
  firstName String?
  lastName  String?
  username  String?   @unique
  email     String?   @unique
  password  String
  token     String?   @unique
  calls     Call[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Call {
  id           String   @id
  time         String
  duration     String
  satisfaction String
  scriptlink   String
  user         User     @relation(fields: [userId], references: [id])
  userId       String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}


model Espware {
  id            String    @id @default(cuid())
  isCall        Boolean
  emotion       String
  satisfaction  String
  updatedAt     DateTime @updatedAt
}